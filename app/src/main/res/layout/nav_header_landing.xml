<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_01"
    android:gravity= "center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/nav_activity_vertical_margin"
    android:paddingLeft="@dimen/nav_activity_vertical_margin"
    android:paddingRight="@dimen/nav_activity_vertical_margin"
    android:paddingTop="@dimen/nav_activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:backgroundTint="@color/transparent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="विद्या सागर संत"
        android:textSize="28dp"
        android:shadowColor="#FBFBFB"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
