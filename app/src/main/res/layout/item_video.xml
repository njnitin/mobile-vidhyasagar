<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_01">
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/logo">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textColor="#281717"
            android:shadowColor="#e13535"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:textAppearance="?attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#452727"
            android:shadowColor="#e13535"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>


    <ImageView
        android:layout_alignBottom="@id/text"
        android:layout_alignTop="@id/text"
        android:id="@+id/logo"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/small_text_margin"
        android:layout_marginRight="@dimen/small_text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"/>


</RelativeLayout>