<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/logo"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/bg_01">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:background="@drawable/bg_01"/>


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>


    <ImageView
        android:layout_alignBottom="@id/text"
        android:layout_alignTop="@id/text"
        android:id="@+id/logo"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_marginLeft="@dimen/small_text_margin"
        android:layout_marginRight="@dimen/small_text_margin"
        android:layout_marginTop="@dimen/extra_small_text_margin"
        android:layout_marginBottom="@dimen/extra_small_text_margin"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_01"/>


</RelativeLayout>