<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jain.vidhyasagarsant.ui.contactUs.ContactUsActivity"
    android:background="@drawable/bg_01">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_01"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/black"
        android:textSize="24dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        app:contentPadding="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="center"
                android:src="@drawable/dp_nitin"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_phone"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        app:contentPadding="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_phone"/>
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9893164274"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_email"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        app:contentPadding="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent">
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_email"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="guruwar.vidyasagar@gmail.com   "
                android:textColor="@color/black"
                android:textSize="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_address"
        android:layout_width="match_parent"
        app:contentPadding="10dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 9986484086"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
